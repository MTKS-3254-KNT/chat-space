.chat_messages__group{data: {message: {id: message.id}}}
  .chat_messages__group__gatmessage
    .chat_messages__group__gatmessage__username
      = message.user.name
    .chat_messages__group__gatmessage__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat_messages__group__gatmessage__message
    - if message.text.present?
      %p.chat_messages__group__gatmessage__message__content
        = message.text
    = image_tag message.image.url, class: 'chat_messages__group__gatmessage__message__image' if message.image.present?